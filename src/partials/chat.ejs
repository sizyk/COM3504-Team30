<div class="fixed bottom-0 right-0 mb-10 mr-10">
    <button id="open-chat" class="bg-accent rounded-md hover:bg-primary p-2.5">
        <img src="/public/img/icons/chat.svg" alt="open chat">
    </button>
</div>
<div id="chat-interface" class="hidden fixed bottom-16 right-4 w-96">
    <div class="bg-white shadow-md rounded-lg max-w-lg w-full">
        <div class="p-4 border-b bg-accent rounded-t-lg flex justify-between items-center">
            <p class="text-lg font-semibold">Comments</p>
            <button id="close-chat" class="text-lg hover:text-gray-400 focus:outline-none focus:text-gray-400">
                <img src="/public/img/icons/close.svg" alt="close chat">
            </button>
        </div>
        <div id="chatbox" class="p-4 h-80 overflow-y-auto">
            <!-- Chat messages will be displayed here -->
            <% if (!(chats === null)) {%>
                <%if (Array.isArray(chats)) { %>
                    <% chats.forEach((chat) => {%>
                        <div class="mb-2 text-right">
                            <p class="bg-blue-500 text-white rounded-lg py-2 px-4 inline-block"><%=chat.message%>></p>
                        </div>
                    <% });%>
                <%}%>
            <%}%>
        </div>
        <div class="p-4 border-t flex">
            <input id="user-input" type="text" placeholder="Type a message" class="text-gray-700 w-full px-3 py-2 border rounded-l-md focus:outline-none focus:ring-2 focus:ring-accent">
            <button id="send-button" class="bg-accent px-4 py-2 rounded-r-md hover:bg-primary transition duration-300">Send</button>
        </div>
    </div>
</div>
<p id="plant-id" class="hidden"><%= plant.id %></p>
<p id="user-id" class="hidden">user-placeholder</p>