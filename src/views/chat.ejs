<main class="mt-24">
    <div id="chat_interface" class="fixed w-96">
        <div class="bg-white shadow-md rounded-lg max-w-lg w-full">
            <div class="p-4 border-b bg-accent rounded-t-lg flex justify-between items-center">
                <p class="text-lg font-semibold">Comments</p>
            </div>
            <div id="chatbox" class="p-4 h-80 overflow-y-auto">
                <!-- Chat messages will be displayed here -->
                <div class="mb-2 text-right">
                    <p class="bg-accent rounded-lg py-2 px-4 inline-block">hello</p>
                </div>
                <div class="mb-2">
                    <p class="bg-gray-200 text-gray-700 rounded-lg py-2 px-4 inline-block">This is a response from the chatbot.</p>
                </div>
            </div>
            <div class="p-4 border-t flex">
                <input id="user-input" type="text" placeholder="Type a message" class="text-gray-700 w-full px-3 py-2 border rounded-l-md focus:outline-none focus:ring-2 focus:ring-accent">
                <button id="send-button" class="bg-accent px-4 py-2 rounded-r-md hover:bg-primary transition duration-300">Send</button>
            </div>
        </div>
    </div>
</main>
