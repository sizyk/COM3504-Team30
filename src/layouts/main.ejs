<!doctype html>
<html class="light h-full w-screen" lang="en">

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
  <link rel="stylesheet" href="/public/styles/dist/global.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <link rel="manifest" href="/public/manifest.json">
  <% if (typeof useLeaflet !== 'undefined' && useLeaflet) { %>
    <link rel="stylesheet" href="/public/styles/leaflet.css">
  <% } %>
</head>
<body class="flex min-h-screen w-screen flex-col bg-background text-text">
  <iframe name="fakesubmit" id="fakesubmit" style="display: none;"></iframe>
  <%- include('../partials/flash-message.ejs') %>
  <%- include('../partials/onlineIndicator.ejs') %>
  <%- include('../partials/themeToggle.ejs') %>

  <%- include('../partials/login-modal.ejs') %>
  <% /* Render child elements of the layout here */%>
  <%- include(children) %>
  <%- include('../partials/footer.ejs') %>
  <button id="logout-button" class="fixed top-4 left-12 size-7 font-bold material-symbols-outlined invisible" title="Logout">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
      <path d="M497 273L329 441c-15 15-41 4.5-41-17v-96H152c-13.3 0-24-10.7-24-24v-96c0-13.3 10.7-24 24-24h136V88c0-21.4 25.9-32 41-17l168 168c9.3 9.4 9.3 24.6 0 34zM192 436v-40c0-6.6-5.4-12-12-12H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h84c6.6 0 12-5.4 12-12V76c0-6.6-5.4-12-12-12H96c-53 0-96 43-96 96v192c0 53 43 96 96 96h84c6.6 0 12-5.4 12-12z"/>
    </svg>
  </button>
  <%- include('../partials/js-variables.ejs') %>
</body>
<% if (typeof useLeaflet !== 'undefined' && useLeaflet) { %>
  <script src="/public/scripts/leaflet/leaflet.js"></script>
<% } %>
<% for(let i=0; i<scripts.length; i++) { %>
  <script
    src="/public/scripts/<%= scripts[i] %>.js"
    type="module"
  ></script>
<% } %>
